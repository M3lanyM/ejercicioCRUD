@model EjercicioCRUD.Models.Item
@{
    ViewBag.Title = "Editar Ítem";
}

<h2>Editar Ítem</h2>

@using (Html.BeginForm("Editar", "Item", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ID)

    <div class="form-group">
        <label>Código:</label>
        @Html.TextBoxFor(m => m.CodigoBusqueda, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Descripción:</label>
        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Precio:</label>
        @Html.TextBoxFor(m => m.Precio, new
        {
            @class = "form-control",
            type = "text",
            value = Model.Precio.ToString(System.Globalization.CultureInfo.InvariantCulture)
        })
    </div>
    <div class="form-group">
        <label>Cantidad:</label>
        @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        <label>Proveedor ID:</label>
        @Html.TextBoxFor(m => m.IDProveedor, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        <label>Última Venta:</label>
        @Html.TextBox("UltimaVenta",
            Model.UltimaVenta.HasValue ? Model.UltimaVenta.Value.ToString("yyyy-MM-ddTHH:mm") : "",
            new { @class = "form-control", type = "datetime-local" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="@Url.Action("Index", "Item")" class="btn btn-secondary">Cancelar</a>
}
